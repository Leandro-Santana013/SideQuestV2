                    <i class="ri-search-line"></i>
                </div>
            </div>

            <div class="area-pagamento">
                <div class="pagamentos">
                    <div class="pag-cabecalho">
                        <div class="alinhador">
                            <p>Usuário</p>
                        </div>
                        <div class="alinhador">
                            <p>Data</p>
                        </div>
